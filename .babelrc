{
  "presets": [
    "@babel/typescript",
    "@babel/preset-env",
    "@babel/preset-react"
  ],
  "plugins": [
    "@babel/plugin-transform-runtime",
    "@babel/proposal-class-properties",
    "react-hot-loader/babel",
    [
      "module-resolver",
      {
        "root": "./src",
        "alias": {
          "~components": "./components",
          "~interfaces": "./interfaces"
        }
      }
    ]
  ],
}