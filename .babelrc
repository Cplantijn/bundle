{
  "presets": [
    "@babel/typescript",
    "@babel/preset-env",
    "@babel/preset-react"
  ],
  "plugins": [
    "@babel/plugin-transform-runtime",
    "@babel/proposal-class-properties",
    "react-hot-loader/babel",
    [
      "module-resolver",
      {
        "root": ".",
        "alias": {
          "~components": "./src/components",
          "~interfaces": "./src/interfaces",
          "~contexts": "./src/contexts"
        }
      }
    ]
  ],
}